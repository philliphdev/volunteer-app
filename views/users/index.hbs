<div class="userPage">
  <h3>Users</h3>
</div>
<div class="userCardsContainer">
  <div class="userCards">
    {{#each listOfUsers}}
    <div class="userPage">
      <div class="card">
        <div class="waves-effect waves-block waves-light">
          <img class="activator circle responsive-img" src="{{photo}}">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4">{{name}}
            <i class="material-icons right">more_vert</i>
          </span>
          <p>
            <a href="/users/{{this._id}}">View</a>
          </p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{name}}
            <i class="material-icons right">close</i>
          </span>
          <p>{{email}}</p>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <a class="waves-effect waves-light green btn" href="/users/new">Create a New User</a>
</div>