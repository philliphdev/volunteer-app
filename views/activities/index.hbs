<h3>{{event.name}} - Activities</h3>
<ul>
  {{#each event.activities}}
  <div class="eventgrid">
    <div class="col s12 m7">
      <h4 class="header">{{name}}</h4>
      <div class="card horizontal">
        <div class="card-image">
          <img src="{{photo}}">
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <li>
              <p>Name: {{description}}</p>
              <p>Location: {{location}}</p>
              <p>Start Date: {{startDate}}</p>
              <p>End Date: {{endDate}}</p>
              <p>Contact: {{contact}}</p>
              <p>Attended: {{attended}}</p>
            </li>
          </div>
          <div class="card-action">
            <a href="/users/{{../userId}}/events/{{../eventId}}/activities/{{_id}}">Show Activity</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
</ul>
<a class="green btn" href="/users/{{userId}}/events/{{eventId}}/activities/new">Add Activity</a>